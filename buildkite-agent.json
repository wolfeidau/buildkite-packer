{
   "variables" : {
      "aws_access_key" : "",
      "aws_secret_key" : ""
   },
   "builders" : [
      {
         "secret_key" : "{{user `aws_secret_key`}}",
         "access_key" : "{{user `aws_access_key`}}",
         "ami_name" : "buildkite-agent {{timestamp}}",
         "ssh_username" : "ubuntu",
         "instance_type" : "t2.micro",
         "type" : "amazon-ebs",
         "region" : "us-west-2",
         "source_ami" : "ami-5189a661"
      }
   ],
   "provisioners" : [
      {
         "type" : "shell",
         "inline" : [
            "sleep 30",
            "sudo sh -c 'echo deb https://apt.dockerproject.org/repo ubuntu-trusty main > /etc/apt/sources.list.d/docker.list'",
            "sudo apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 58118E89F3A912897C070ADBF76221572C52609D",
            "sudo sh -c 'echo deb https://apt.buildkite.com/buildkite-agent stable main > /etc/apt/sources.list.d/buildkite-agent.list'",
            "sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 32A37959C2FA5C3C99EFBC32A79206696452D198",
            "sleep 3",
            "sudo apt-get update",
            "sudo sh -c 'curl -L https://github.com/wolfeidau/coffer/releases/download/v2.0.0/coffer_2.0.0_linux_x86_64.tgz | tar xvzf - -C /usr/local/bin'",
            "sudo apt-get install -y -q docker-engine buildkite-agent make",
            "sudo usermod -aG docker ubuntu",
            "sudo usermod -aG docker buildkite-agent"
         ]
      }
   ]
}
